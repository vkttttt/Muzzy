<% layout('../../layout/admin'); %>
<!-- Content Header (Page header) -->
<section class="content-header form-inline">
    <h1>Add <%=mod_alias%><small><a href="<%=mod_url%>"><i class="fa fa-reply"></i></a></small></h1>
    <ol class="breadcrumb">
        <li><a href="<%= _adminUrl%>"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><%=mod_alias%></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <% if (typeof(valid_errors) != 'undefined' && valid_errors.length > 0) { %>
    <section class="content-header">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <% valid_errors.forEach(function(error){ %>
            <p><i class="icon fa fa-warning"></i> <%= error%> </p>
            <% }); %>
        </div>
    </section>
    <% } %>
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <form class="form-horizontal" id="FormAdd" method="post">
                    <div class="box-body table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTable">
                            <tbody>
                            <% field_keys.forEach(function(field) { %>
                            <% if (field != '_id' && field != 'createdAt' && field != 'updatedAt' && field != 'update_by' && field != 'permissions' && field != 'collection_name' && field != 'default_fields') { %>
                            <tr>
                                <td><label for="<%=field%>"><%=field%></label></td>
                                <td>
                                    <% if(field == 'module') { %>
                                    <select class="form-control medium" name="module" required>
                                        <option value=""></option>
                                        <% for(let i = 0; i<modules_list.length; i++){ %>
                                        <option value="<%=modules_list[i].name%>" <% if(helpers.admin.get_query_data(post_data,'module') == modules_list[i].name){%> selected <%}%> ><%=modules_list[i].name%></option>
                                        <%}%>
                                    </select>
                                    <% }else{%>
                                    <input type="text" class="form-control medium" value="<%=helpers.admin.get_query_data(post_data,field)%>" id="<%=field%>" name="<%=field%>"/>
                                    <% } %>
                                </td>
                            </tr>
                            <% } %>
                            <% }); %>
                            <tr>
                                <td><label>Permissions</label></td>
                                <td class="permissions">
                                    <% for(let i = 0; i<perm_default.length; i++){ %>
                                    <div class="checkbox">
                                        <input id="checkbox_<%=i%>" class="styled" type="checkbox" name="permissions" value="<%=perm_default[i]%>">
                                        <label for="checkbox_<%=i%>"><%=perm_default[i]%></label>
                                    </div>
                                    <% } %>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <input type="text" class="form-control small" value="" id="add_more_perm" name="" style="display: inline"/>
                                    <i class="fa fa-plus-circle" onclick="add_more_perm();"></i>
                                </td>
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <a>
                                        <button type="submit" class="btn btn-primary">Add <%=mod_alias%></button>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    function add_more_perm(){
        var name = $('#add_more_perm').val();
        var html = '<div class="checkbox">';
        html +=  '<input id="checkbox_'+name+'" class="styled" type="checkbox" name="permissions" value="'+name+'">';
        html +=  '<label for="checkbox_'+name+'">'+name+'</label>';
        html +=  '</div>';
        $('.permissions').append(html);
    }
</script>
