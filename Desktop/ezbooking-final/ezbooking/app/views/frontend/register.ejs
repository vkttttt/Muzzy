<% layout('../layout/default'); %>

<div class="ps-breadcrumb">
    <div class="container">
      <ul class="breadcrumb">
        <li>
            <a href="/ezbooking">
                Home
            </a>
        </li>
        <li>
            <a>
                Đăng ký
            </a>
        </li>
      </ul>
    </div>
  </div>

<section class="ps-page--my-account">
    <div class="ps-my-account">
      <div class="container">
        <div class="ps-form--account">
          <ul class="ps-tab-list">
            <li>
              <% if(!user_id){ %> 
                    <a href="<%=_baseUrl%>login">Đăng nhập</a>
                <% }; %>
            </li>
            <li class="active">
              <% if(!user_id){ %> 
                    <a href="<%=_baseUrl%>register">Đăng ký</a>
                <% }; %>
            </li>
          </ul>
          <div class="ps-tab active login-box-body">
              
            <form action="" method="post">
                <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                <div class="ps-form__content">
                    <h5>Tạo tài khoản</h5>
                    <div class="form-group">
                        <input type="text" class="ps-text-field" placeholder="username" required name="username" <% if(appConfig.env == 'production'){ %> autocomplete="off" <%}%> >
                    </div>
                    <div class="form-group">
                        <input type="text" class="ps-text-field" placeholder="email" required name="email" <% if(appConfig.env == 'production'){ %> autocomplete="off" <%}%> >
                    </div>
                    <div class="form-group">
                        <input type="text" class="ps-text-field" placeholder="phone" required name="phone" <% if(appConfig.env == 'production'){ %> autocomplete="off" <%}%> >
                    </div>
                    <div class="form-group">
                        <input type="text" class="ps-text-field" placeholder="fullname" required name="fullname" <% if(appConfig.env == 'production'){ %> autocomplete="off" <%}%> >
                    </div>
                    <div class="form-group">
                        <input type="password" class="ps-text-field" placeholder="password" required name="password" <% if(appConfig.env == 'production'){ %> autocomplete="off" <%}%>>
                    </div>
                    <% if ( typeof msg_error != 'undefined' && msg_error.length > 0 ) { %>
                        <div class="small-box bg-red">
                            <div class="inner">
                                <% msg_error.forEach(function(error){ %>
                                <p><%= error %></p>
                                <%});%>
                            </div>
                        </div>
                    <% } %>
                    <div class="submit">
                        <button type="submit" class="ps-btn ps-btn--fullwidth">Đăng ký</button>
                    </div>
                </div>
                <div class="ps-form__footer">
                    <p>Đăng nhập với:</p>
                    <ul class="ps-list--social">
                        <li>
                        <a href="/" class="facebook">
                            <i class="fa fa-facebook"></i>
                        </a>
                        </li>
                        <li>
                        <a href="/" class="google">
                            <i class="fa fa-google-plus"></i>
                        </a>
                        </li>
                        <li>
                        <a href="/" class="twitter">
                            <i class="fa fa-twitter"></i>
                        </a>
                        </li>
                        <li>
                        <a href="/" class="instagram">
                            <i class="fa fa-instagram"></i>
                        </a>
                        </li>
                    </ul>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
