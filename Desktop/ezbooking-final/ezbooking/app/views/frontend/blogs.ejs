<% layout('../layout/default') %>

<!------ Include the above in your HEAD tag ---------->

<div class="page-banner-section section" style="background-image: url(<%=_staticUrl%>public/frontend/assets/img/banner/banner-7.jpg)">
  <div class="container">
      <div class="row">
          <div class="page-banner-content col">
            <h1>Bài viết</h1>
            <ul class="page-breadcrumb">
                <li><a href="/ezbooking">Home</a></li>
                <li><a>Bài viết</a></li>
            </ul>
          </div>
      </div>
  </div>
</div>

<section class="page-collection">
  <div class="container">
    <div class="page-collection-section">
      <div class="row">
        <% if(ez_blogdata){ %>
                <% ez_blogdata.forEach(function(blog){ %>
                    <% if(blog){ %>
                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                  <div class="ps-block__item">
                    <a href="<%=_baseUrl%>blogs/<%=blog._id%>"></a>
                    <img src="<%=_staticUrl%><%=blog.thumbnail %>" alt="" />
                    <p class="hiden__text_1"><%=blog.title%></p>
                    <div class="desc">
                        <p><%=blog.view%> lượt xem</p>
                    </div>
                  </div>
                </div>
              <% }; %>
                <% }); %>
            <% }; %>     
      </div>
      <div class="col-12 button_show-more" style="display: flex;justify-content: center;align-items: center;padding: 10px;background-color: #fff;">
          <button class="btn btn-info btn-submit" id="view-more">Xem thêm</button>
      </div>
    </div>
  </div>
</section>

