<% layout('../../layout/admin'); %>

<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">

<!-- Content Header (Page header) -->
<section class="content-header form-inline">
    <h1>Edit <%= mod_alias%><small><a href="<%=mod_url%>"><i class="fa fa-reply"></i></a></small></h1>
    <ol class="breadcrumb">
        <li><a href="<%= _adminUrl%>"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active"><%=title%></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <% if (typeof(valid_errors) != 'undefined' && valid_errors.length > 0) { %>
    <section class="content-header">
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <% valid_errors.forEach(function(error){ %>
            <p><i class="icon fa fa-warning"></i> <%= error%> </p>
            <% }); %>
        </div>
    </section>
    <% } %>
    <div class="row">
        <div class="col-lg-12">
            <div class="box">
                <form class="form-horizontal" id="FormAdd" method="post">
                    <div class="box-body table-responsive">
                        <input type="hidden" class="form-control small" name="_id" value="<%= data_edit._id%>"/>
                        <table class="table table-striped table-bordered table-hover dataTable">
                            <tbody>
                            <tr>
                                <td><label for="name">Resource Name</label></td>
                                <td>
                                    <input disabled type="text" class="form-control medium" value="<%=helpers.admin.get_query_data(data_edit,'name')%>" id="name" name="name"/>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="module">Module</label></td>
                                <td>
                                    <input disabled type="text" class="form-control medium" value="<%=helpers.admin.get_query_data(data_edit,'module')%>" id="module" name="module"/>
                                </td>
                            </tr>

                            <tr>
                                <td><label for="module">Collection name</label></td>
                                <td>
                                    <input type="text" class="form-control medium" value="<%=helpers.admin.get_query_data(data_edit,'collection_name')%>" name="collection_name"/>
                                </td>
                            </tr>

                            <tr>
                                <td><label>Default Fields</label></td>
                                <td>
                                    <div class="custom_fields" id="sortable">
                                        <% var default_fields = data_edit.default_fields;%>
                                        <% for(let i = 0; i<default_fields.length; i++){ %>
                                        <div class="checkbox ui-state-default" >
                                            <input id="f_checkbox_<%=i%>" checked class="styled" type="checkbox" name="default_fields" value="<%=default_fields[i]%>">
                                            <label for="f_checkbox_<%=i%>"><%=default_fields[i]%></label>
                                        </div>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td><label>Add more fields</label></td>
                                <td>
                                    <input type="text" class="form-control small" id="add_more_fields"  style="display: inline"/>
                                    <i class="fa fa-plus-circle" onclick="add_more_fields();"></i>
                                </td>
                            </tr>

                            <tr>
                                <td><label>Permissions</label></td>
                                <td class="permissions">
                                    <% var permissions = data_edit.permissions;%>
                                    <% for(let i = 0; i<perm_default.length; i++){ %>
                                    <div class="checkbox">
                                        <input id="p_checkbox_<%=i%>" <% if(permissions.indexOf(perm_default[i]) != -1){ %>checked<% } %> class="styled" type="checkbox" name="permissions" value="<%=perm_default[i]%>">
                                        <label for="p_checkbox_<%=i%>"><%=perm_default[i]%></label>
                                    </div>
                                    <% } %>
                                </td>
                            </tr>

                            <tr>
                                <td><label>Add more permission</label></td>
                                <td>
                                    <input type="text" class="form-control small" value="" id="add_more_perm" style="display: inline"/>
                                    <i class="fa fa-plus-circle" onclick="add_more_perm();"></i>
                                </td>
                            </tr>

                            <tr>
                                <td></td>
                                <td>
                                    <a>
                                        <button type="submit" class="btn btn-primary">Edit setting</button>
                                    </a>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $( function() {
        $("#sortable").sortable({placeholder: "ui-state-highlight"});
    } );

    function add_more_fields(){
        var fields = [];
        $("input:checkbox[name=permissions]").each(function(){fields.push($(this).val());});
        var name = $('#add_more_fields').val().trim();
        $('#add_more_fields').val('');
        if(!name || fields.indexOf(name) >= 0){
            return false;
        }
        var html = '<div class="checkbox ui-state-default">';
        html +=  '<input id="f_checkbox_'+name+'" checked class="styled" type="checkbox" name="default_fields" value="'+name+'">';
        html +=  '<label for="f_checkbox_'+name+'">'+name+'</label>';
        html +=  '</div>';
        $('.custom_fields').append(html);
        //$("#sortable").sortable({placeholder: "ui-state-highlight"});
    }

    function add_more_perm(){
        var fields = [];
        $("input:checkbox[name=permissions]").each(function(){fields.push($(this).val());});
        var name = $('#add_more_perm').val().trim();
        $('#add_more_perm').val('');
        if(!name || fields.indexOf(name) >= 0){
            return false;
        }
        var html = '<div class="checkbox">';
        html +=  '<input id="p_checkbox_'+name+'" class="styled" checked type="checkbox" name="permissions" value="'+name+'">';
        html +=  '<label for="p_checkbox_'+name+'">'+name+'</label>';
        html +=  '</div>';
        $('.permissions').append(html);
    }

</script>
