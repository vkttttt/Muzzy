  <style>
      .desc{
          overflow: hidden;
          white-space: nowrap; 
    text-overflow: ellipsis;
      }
  </style>

  <script>
    $(".ps-block__item").slice(0,8).show()
    $("#view-more").on("click", function(){
        $(".ps-block__item:hidden").slice(0,4).slideDown();
        if($(".ps-block__item:hidden").length == 0){
            $("#view-more").fadeOut('slow')
        }
    })
</script>