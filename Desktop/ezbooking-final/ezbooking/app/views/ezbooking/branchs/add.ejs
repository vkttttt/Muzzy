        ajax_get_districts(province);
        ajax_get_wards('');
    });

    function ajax_get_districts(province) {
        var data_post = {
            _csrf: tok_value,
            province: province,
        };
        $.ajax({
            type: 'POST',
            url: base_url + 'service/get_districts',
            data: data_post,
            dataType: 'json',
            success: function (response) {
                if (response && response.error === 0) {
                    var html = '<option value="" disabled selected>Quận / Huyện</option>';
                    response.data.forEach(function (district) {
                        html += '<option value="' + district + '">' + district + '</option>';
                    });
                    $('#district').html(html);
                }
            },
            error: function () {
                location.reload();
            },
        });
    }

</script>